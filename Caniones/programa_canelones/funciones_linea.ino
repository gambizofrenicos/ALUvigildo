int horizontal=0;
int detectar_horizontal(){
  for(unsigned char i=0; i<NUM_SENSORS; i++){
    if(sensorValues[i]>800) horizontal=1;
    else{
      horizontal=0;
      break;
    }
  }
  return horizontal;
}

